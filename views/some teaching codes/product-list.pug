extends layouts/main-layout.pug 

block styles 
    link(rel="stylesheet", href="/css/product.css")
block content
    main
        if prods.length > 0
            .grid 
                each product in prods
                        article.card.product-item 
                            header.card__header 
                                h1.product__title #{product.title}
                            .card__image 
                                img(src="https://images.unsplash.com/photo-1589998059171-988d887df646?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8b3BlbiUyMGJvb2t8ZW58MHx8MHx8&w=1000&q=80", alt="book image")
                            .card__content 
                                h2.product__price Rs 2000
                                p.product__description A very good read and such an inspirational book. I would cherish it forever.     
                            .card__actions  
                                button.btn Add to cart
        else    
            h1 No Products     



